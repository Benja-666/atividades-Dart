void main(){
  
  
double peso = 59;
double altura = 1.77;
  
double calcularIMC = peso / (altura * altura) ;
  
   
    if(calcularIMC >= 40) {
       print("Obesidade - GRAU ||| (Mórbida)");
    } else if (calcularIMC < 40 && calcularIMC >= 35) {
      print("Obesidade - GRAU || (Severa)");
    } else if (calcularIMC < 35 && calcularIMC >= 30) {
       print ("Obesidade - GRAU |");
    } else if (calcularIMC < 30 && calcularIMC >= 25) {
       print ("Sobrepeso");
    } else if (calcularIMC < 25 && calcularIMC >= 18.5) {
      print ('Saudável');
    } else if (calcularIMC < 18.5 && calcularIMC >= 17) {
       print ("Magreza leve");
    } else if (calcularIMC < 17 && calcularIMC >= 16) {
      print ("Magreza moderada");
      } else {
     print ("Magreza grave");
 }  
}

