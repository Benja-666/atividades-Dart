  void main(){
  int peso = 59;
  
   if(peso < 60){
     print('P');
   }else if(peso >= 61 && peso <= 74){
     print('M');
   }else if(peso >= 75 && peso <= 85){
     print('G');
   }else {
     print('GG');
   }
}

