void main() {
  
  
double nota1 = 3;
double nota2 = 4;
  
double calculo = (nota1 + nota2) / 2;
  
String dados(){
  return calculo >= 6
 ? " Voce foi aprovado Aprovado"
 : "Voce foi Reprovado";

}

print(dados());
}
