void main() {

 double n1 = 7;
 double n2 = 3;
 double n3 = 4;
 double n4 = 2;

dynamic somaNotas = (n1 + n2 + n3 + n4) / 4;

if(somaNotas >= 7){
print('Aprovado');
 }else{
print('Reprovado');
}  

if(somaNotas >= 9) {
print("A");
 }else if(somaNotas >= 8 && somaNotas < 9) {
print("B");
 }else if(somaNotas >= 7 && somaNotas < 8) {
 print("C");
 }else{
 print("F");
 }
}

