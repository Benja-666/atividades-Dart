void main(){

int number1 = 777;
int number2 = 666;

if(number1 <number2){
  print("o numero 777 é menor que o 666");
}else if(number1 == number2){
  print("Os numeros são iguai");
}else if(number1 >number2){
  print("o numero 777 é maior que o 666");
}

}

